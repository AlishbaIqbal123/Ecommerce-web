rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isVendor() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'vendor';
    }
    
    function isVendorOwner(vendorId) {
      return isVendor() && get(/databases/$(database)/documents/vendors/$(vendorId)).data.userId == request.auth.uid;
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated(); // Users can read other profiles (e.g., reviews), or restrict to self/admin? For now allow auth.
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Products Collection
    match /products/{productId} {
      allow read: if true; // Public read
      allow create: if isVendor() && get(/databases/$(database)/documents/vendors/$(request.resource.data.vendorId)).data.userId == request.auth.uid;
      allow update: if isVendorOwner(resource.data.vendorId) || isAdmin(); 
      allow delete: if isVendorOwner(resource.data.vendorId) || isAdmin();
    }

    // Categories Collection
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Vendors Collection
    match /vendors/{vendorId} {
      allow read: if true;
      allow create: if isAuthenticated(); // Anyone can apply to become a vendor
      allow update: if isVendorOwner(vendorId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Orders Collection
    match /orders/{orderId} {
      // Vendors can read orders containing their products
      allow read: if isOwner(resource.data.userId) || 
                  (isVendor() && resource.data.items[0].vendorId != null && isVendorOwner(resource.data.items[0].vendorId)) || 
                  isAdmin();
      allow create: if isAuthenticated();
      allow update: if isAdmin() || (isVendor() && isVendorOwner(resource.data.items[0].vendorId)); 
      allow delete: if isAdmin();
    }

    // Reviews Collection
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Carts Collection
    match /carts/{cartId} {
      allow read, write: if isOwner(resource.data.userId);
    }

    // Notifications Collection
    match /notifications/{notificationId} {
      allow read: if isOwner(resource.data.userId);
      allow write: if isAdmin(); // Only system/admin creates notifications usually
    }
  }
}
